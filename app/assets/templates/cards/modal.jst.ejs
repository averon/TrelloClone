<div class="modal-dialog">
  <div class="modal-content">
    <div class="modal-header">
      <button type="button" class="close" data-dismiss="modal"><span aria-hidden="true">&times;</span><span class="sr-only">Close</span></button>
      <div class="card-title">
        <h3><%= card.escape('title') %></h3>
      </div>
    </div>
    <form class="card-detail-form">
      <div class="modal-body">
        <div class="form-group">
          <label for="card-description">Description</label>
          <textarea id="card-description"
                    class="form-control"
                    name="card[description]"><%= card.escape('description') %></textarea>
        </div>
      </div>
      <div class="modal-footer">
        <button type="button" class="delete-card btn btn-danger pull-left">Delete</button>
        <button type="button" class="btn btn-primary" data-dismiss="modal">Close</button>
        <button type="submit" class="btn btn-success">Save changes</button>
      </div>
    </form>
  </div>
</div>
