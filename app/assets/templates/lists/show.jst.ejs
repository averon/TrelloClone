<h3><%= list.escape('title') %></h3>

<ol class="cards">
</ol>

<button class="btn btn-primary delete" id="<%= list.id %>">Delete</button>

<!-- Modal -->
<div class="modal fade" id="createCard-<%= list.id %>" tabindex="-1">
  <div class="modal-dialog">
    <div class="modal-content">
      <div class="modal-header">
        <button type="button" class="close" data-dismiss="modal"><span aria-hidden="true">&times;</span><span class="sr-only">Close</span></button>
        <h3 class="new-card">Create new card</h4>
      </div>
      <form class="new-card-form">
        <div class="modal-body">
          <div class="form-group">
            <label for="card-title">Title</label>
            <input id="title"
                   class="form-control"
                   name="card[title]"
                   type="text">
          </div>
          <div class="form-group">
            <label for="card-description">Description</label>
            <textarea id="card-description"
                      class="form-control"
                      name="card[description]"></textarea>
          </div>
        </div>
        <div class="modal-footer">
          <button type="button" class="btn btn-default" data-dismiss="modal">Close</button>
          <button type="submit" class="btn btn-primary">Save changes</button>
        </div>
      </form>
    </div>
  </div>
</div>